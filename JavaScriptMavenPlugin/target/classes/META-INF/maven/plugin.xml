  <mojos>
    <mojo>
      <goal>combined-js</goal>
      <description>Combines all the project and dependency javascript into single artifacts.</description>
      <requiresDependencyResolution>runtime</requiresDependencyResolution>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <phase>package</phase>
      <implementation>net.dynamic_tools.maven.plugin.javascript.mojo.CombineDependenciesJavaScriptMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>concatenate</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Output concatenated javascript</description>
        </parameter>
        <parameter>
          <name>finalName</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>The final name for the project</description>
        </parameter>
        <parameter>
          <name>javaScriptDirectory</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>The directory the javascript source is in</description>
        </parameter>
        <parameter>
          <name>jsDependencyRegex</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Output concatenated javascript</description>
        </parameter>
        <parameter>
          <name>manifest</name>
          <type>java.io.File</type>
          <required>false</required>
          <editable>true</editable>
          <description></description>
        </parameter>
        <parameter>
          <name>minify</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Output concatenated javascript</description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description>The maven project.</description>
        </parameter>
        <parameter>
          <name>projectBuildDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>false</editable>
          <description></description>
        </parameter>
        <parameter>
          <name>withDependencies</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Output concatenated javascript</description>
        </parameter>
      </parameters>
      <configuration>
        <concatenate implementation="boolean" default-value="false">${package.concatenate}</concatenate>
        <finalName implementation="java.lang.String" default-value="${project.build.finalName}"/>
        <javaScriptDirectory implementation="java.lang.String" default-value="src/main/javascript">${package.javaScriptDirectory}</javaScriptDirectory>
        <jsDependencyRegex implementation="java.lang.String" default-value="^\s*\*+\s+@requires (\S*)">${package.concatenate}</jsDependencyRegex>
        <minify implementation="boolean" default-value="true">${package.minify}</minify>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <projectBuildDirectory implementation="java.io.File">${project.build.directory}</projectBuildDirectory>
        <withDependencies implementation="boolean" default-value="true">${package.withDependencies}</withDependencies>
      </configuration>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.archiver.Archiver</role>
          <role-hint>javascript</role-hint>
          <field-name>archiver</field-name>
        </requirement>
        <requirement>
          <role>net.dynamic_tools.maven.plugin.javascript.util.JavaScriptArtifactManager</role>
          <field-name>javaScriptArtifactManager</field-name>
        </requirement>
        <requirement>
          <role>org.apache.maven.project.MavenProjectHelper</role>
          <field-name>mavenProjectHelper</field-name>
        </requirement>
      </requirements>
    </mojo>
